then
        switch(receivedCommand) {
                case 1 :  {
                        sendCommand(CounterColorSim, "40,86,100")
                }
                case 2 :  {
                        sendCommand(CounterColorSim, "225,24,100")
                }
                case 3 :  {
                        sendCommand(CounterColorSim, CustomCounterolorSim)
                }
                default : {
                        sendCommand(CounterColorSim, OFF)
                }
        }
end

rule "Aanrecht kleuren"
when
	Item CounterColorSim received command
then 
	var CounterSceneTemp=3
	if (receivedCommand.toString == "60,100,100" || receivedCommand.toString == "40,86,100" ) {
		postUpdate(CounterColorSim, "40,86,100") 
		CounterSceneTemp=1
	} else if (receivedCommand.toString == "240,100,100" || receivedCommand.toString == "225,24,100") {
		postUpdate(CounterColorSim, "225,24,100")
		CounterSceneTemp=2
	} else if (receivedCommand == OFF ) {
		CounterSceneTemp=0
	}

	Thread::sleep(200)
 	postUpdate(KeukenAanScene,CounterSceneTemp)
	if (CounterSceneTemp == 3)
	{
		CustomCounterolorSim=CounterColorSim.state.toString
	}
	KeukenstripC.sendCommand(CounterColorSim.state)
end

